<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">

		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
		<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

		{% block stylesheets %}
			<link href="{{ asset('style/todolist.css') }}" rel="stylesheet"/>
			<link href="{{ asset('style/login.css') }}" rel="stylesheet"/>
		{% endblock %}

	</head>
	<body>

		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<a class="navbar-brand" href="{{ path('index') }}">To Do List</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav mr-auto w-100 justify-content-end">

					{% if not app.user %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('register') }}">Register
								<span class="sr-only">(current)</span>
							</a>
						</li>
					{% endif %}

					{% if not app.user %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('login') }}">Log In
								<span class="sr-only">(current)</span>
							</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('logout') }}">Log Out
								<span class="sr-only">(current)</span>
							</a>
						</li>

					{% endif %}
				</ul>
			</div>
		</nav>
		<div class="container mt-5"> {% block body %}{% endblock %}
			</div>
		</body>
		{% block javascripts %}
			<script src="{{ asset('script/todolist.js') }}"></script>
		{% endblock %}
	</html>
